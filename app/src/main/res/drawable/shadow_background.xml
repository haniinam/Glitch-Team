<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#40000000" /> <!-- Warna bayangan -->
            <corners android:radius="20dp" /> <!-- Radius sudut -->
        </shape>
    </item>
    <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Warna background utama -->
            <corners android:radius="20dp" />
        </shape>
    </item>
</layer-list>
