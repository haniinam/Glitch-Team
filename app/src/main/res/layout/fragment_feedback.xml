<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.account.AccountFragment">

    <TextView
        android:id="@+id/text_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/white">


        <TextView
            android:id="@+id/tv_petify"
            android:layout_width="191dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:paddingBottom="4dp"
            android:text="Petify"
            android:textColor="@color/orange"
            android:textSize="48sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_hithere"
            android:layout_width="126dp"
            android:layout_height="57dp"
            android:layout_gravity="top|left"
            android:paddingBottom="4dp"
            android:text="Hi there "
            android:textColor="#673AB7"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ask us anything, or share your feedback."
            android:textSize="16sp"
            android:textColor="#757575"
            android:paddingBottom="16dp"/>

        <RatingBar
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="3" />

        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comments :"
            android:textSize="16sp"
            android:textColor="#757575"
            android:paddingBottom="16dp"/>

        <LinearLayout
            android:layout_width="386dp"
            android:layout_height="166dp"
            android:layout_marginBottom="16dp"
            android:background="@color/grey1"
            android:orientation="vertical"
            android:padding="16dp">

            <EditText
                android:id="@+id/et_entercomment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your comments here"
                android:paddingBottom="10dp"
                android:textColor="#000000"
                android:textSize="22sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#673AB7"
            android:text="Submit feedback"
            android:textColor="#FFFFFF"
            android:paddingHorizontal="24dp"
            android:paddingVertical="8dp"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="386dp"
            android:layout_height="166dp"
            android:layout_marginBottom="16dp"
            android:background="@color/grey1"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/wa"
                android:layout_width="156dp"
                android:layout_height="41dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/wa" />

            <TextView
                android:id="@+id/tv_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Contact Us"
                android:textColor="#757575"
                android:textStyle="bold"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_nomor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="(+012) 3456 7890"
                android:textColor="#757575"
                android:textSize="16sp"
                />

            <Button
                android:id="@+id/btnWhatsApp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="#4CAF50"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:paddingHorizontal="24dp"
                android:paddingVertical="12dp"
                android:text="Contact us on WhatsApp"
                android:textColor="#FFFFFF" />


        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>